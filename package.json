{
  "name": "functions",
  "scripts": {
    "deploy": "firebase deploy --only functions:webhook",
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:critical": "vitest run critical-path.test.ts",
    "test:api": "RUN_API_TESTS=true vitest run critical-path.test.ts",
    "test:integration": "RUN_INTEGRATION_TESTS=true vitest run",
    "test:all": "RUN_API_TESTS=true RUN_INTEGRATION_TESTS=true vitest run"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.2.0",
    "firebase-functions": "^6.4.0",
    "google-auth-library": "^8.8.0",
    "openai": "^5.13.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitest/ui": "^4.0.10",
    "c8": "^10.1.3",
    "dotenv": "^17.2.3",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.0.0",
    "typescript": "^4.9.0",
    "vitest": "^4.0.10"
  },
  "private": true
}